#!/bin/sh

set -e

. /etc/default/openmediavault
. /usr/share/openmediavault/scripts/helper-functions

case "$1" in
    configure)
        SERVICE_XPATH_NAME="dyndns"
        SERVICE_XPATH="/config/services/${SERVICE_XPATH_NAME}"

        # Add the default configuration
        if ! omv_config_exists "${SERVICE_XPATH}"; then
            omv_config_add_element "/config/services" "${SERVICE_XPATH_NAME}"
            omv_config_add_element "${SERVICE_XPATH}" "enable" "0"
            omv_config_add_element "${SERVICE_XPATH}" "hostname" ""
			omv_config_add_element "${SERVICE_XPATH}" "interval" ""
            omv_config_add_element "${SERVICE_XPATH}" "username" ""
            omv_config_add_element "${SERVICE_XPATH}" "password" ""
            omv_config_add_element "${SERVICE_XPATH}" "uuid" "$(cat /proc/sys/kernel/random/uuid)"
        fi
		
mkdir -p /var/lib/openmediavault/dyndns/

updateScript=' 
#!/bin/bash  \n
# This configuration file is auto-generated.\n
# WARNING: Do not edit this file, your changes will be lost. \n
\n
host=$(less /var/lib/openmediavault/dyndns/config.ini | grep host: | cut -d":" -f2) \n
pass=$(less /var/lib/openmediavault/dyndns/config.ini | grep pass: | cut -d":" -f2) \n
user=$(less /var/lib/openmediavault/dyndns/config.ini | grep user: | cut -d":" -f2)\n
base=$(echo $user:$pass | base64) \n
curl -A "bashScriptUpdater/0.1 demo@demo.de" -H "Authorization: Basic $base" https://dynupdate.no-ip.com/nic/update?hostname=$host #>>log 2>&1 \n
exit 0'

echo $updateScript > /var/lib/openmediavault/dyndns/dynDnsUpdater

chmod +x /var/lib/openmediavault/dyndns/dynDnsUpdater
        # Activate package triggers. These triggers are only set during the
        # package installation.
        dpkg-trigger update-fixperms
        dpkg-trigger update-locale
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument" >&2
        exit 1
    ;;
esac

#DEBHELPER#

exit 0
