set -e 

. /etc/default/openmediavault
. /usr/share/openmediavault/scripts/helper-functions

# todo: why doesnÂ´t work this?
#OMV_CRONSCRIPTS_DIR = ${OMV_CRONSCRIPTS_DIR:-"/etc/cron.d/"}
#echo  ${OMV_CRONSCRIPTS_DIR}

OMV_RSYNCD_CONFIG=${OMV_RSYNCD_CONFIG:-"/etc/rsyncd.conf"}


xmlstarlet sel -t -m "//services/dyndns" \
  -v "concat('username = ',username)" -n \
  -v "concat('password = ',password)" -n \
  -v "concat('hostname = ',hostname)" -n \

  -v extraoptions -n \
  ${OMV_CONFIG_FILE} | xmlstarlet unesc > ${OMV_RSYNCD_CONFIG}







echo "SHELL=/bin/sh
PATH=/usr/local/sbin:/usr/local/bin:/sbin:/bin:/usr/sbin:/usr/bin
# m h dom mon dow user    command
*/4 * * * * root /var/lib/openmediavault/dyndns/dynDnsUpdater >/dev/null 2>&1
" > /etc/cron.d/openmediavault-dyndnsupdater

chmod 644 /etc/cron.d/openmediavault-dyndnsupdater


