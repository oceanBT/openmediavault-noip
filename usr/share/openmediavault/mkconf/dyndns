set -e 

. /etc/default/openmediavault
. /usr/share/openmediavault/scripts/helper-functions

# todo: why this doesnÂ´t work?
#OMV_CRONSCRIPTS_DIR = ${OMV_CRONSCRIPTS_DIR:-"/etc/cron.d/"}
#echo  ${OMV_CRONSCRIPTS_DIR}

#creating config file 
xmlstarlet sel -t -m "//services/dyndns" \
  -v "concat('username = ',username)" -n \
  -v "concat('password = ',password)" -n \
  -v "concat('hostname = ',hostname)" -n \
  ${OMV_CONFIG_FILE} | xmlstarlet unesc > /var/lib/openmediavault/dyndns/config.ini

  
 #todo  delete cron file and only if enabled =1 create a new script
 
enabled = $(xmlstarlet sel -t -m "//services/dyndns"  -v "enable" ${OMV_CONFIG_FILE} )
 
if [ $enabled -eq 1 ]
then
#creating cron file
xmlstarlet sel -t -m "//services/dyndns" \
  -o "SHELL=/bin/sh" -n \
  -o "PATH=/usr/local/sbin:/usr/local/bin:/sbin:/bin:/usr/sbin:/usr/bin" -n \
  -o "# m h dom mon dow user    command" -n \
  -o "SHELL=/bin/sh" -n \
  -v "concat('*/',interval,' * * * * root /var/lib/openmediavault/dyndns/dynDnsUpdater >/dev/null 2>&1 ')" -n \
  ${OMV_CONFIG_FILE} | xmlstarlet unesc > /etc/cron.d/openmediavault-dyndnsupdater

  chmod 644 /etc/cron.d/openmediavault-dyndnsupdater
  
else
  rm  /etc/cron.d/openmediavault-dyndnsupdater
fi
 





